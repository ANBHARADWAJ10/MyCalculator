<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyCalculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">@color/black</item>
        // when it's dark set it to false.
        <item name="android:windowLightStatusBar">false</item>

    </style>


    <style name="operatorButton" parent="commonButton">

        <item name="android:textColor">@color/text</item>
        <item name="backgroundTint">@color/btnBackground2</item>

    </style>

    <style name="pagebackground">
        <item name="background">@color/page</item>
    </style>


    <style name="digitButton" parent="commonButton">

        <item name="android:textColor">@color/text</item>

    </style>

    <style name="commonButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">

        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="cornerRadius">36dp</item>
        <item name="backgroundTint">@color/btnBackground</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_margin">12dp</item>

    </style>
</resources>